<?xml version="1.0" encoding="utf-8"?>
<loomworks>

    <!-- ECO Stage Tree View -->
    <record id="plm_eco_stage_view_tree" model="ir.ui.view">
        <field name="name">plm.eco.stage.tree</field>
        <field name="model">plm.eco.stage</field>
        <field name="arch" type="xml">
            <list string="ECO Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="state"/>
                <field name="is_blocking"/>
                <field name="require_approval"/>
                <field name="fold"/>
                <field name="eco_count"/>
            </list>
        </field>
    </record>

    <!-- ECO Stage Form View -->
    <record id="plm_eco_stage_view_form" model="ir.ui.view">
        <field name="name">plm.eco.stage.form</field>
        <field name="model">plm.eco.stage</field>
        <field name="arch" type="xml">
            <form string="ECO Stage">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Stage Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="state"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="is_blocking"/>
                            <field name="require_approval"/>
                            <field name="fold"/>
                        </group>
                    </group>
                    <group string="Notifications">
                        <field name="mail_template_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ECO Stage Action -->
    <record id="plm_eco_stage_action" model="ir.actions.act_window">
        <field name="name">ECO Stages</field>
        <field name="res_model">plm.eco.stage</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create ECO Stages
            </p>
            <p>
                Stages define the workflow steps for Engineering Change Orders.
            </p>
        </field>
    </record>

</loomworks>
