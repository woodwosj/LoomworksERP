<?xml version="1.0" encoding="utf-8"?>
<loomworks>

    <!-- ECO Kanban View -->
    <record id="plm_eco_view_kanban" model="ir.ui.view">
        <field name="name">plm.eco.kanban</field>
        <field name="model">plm.eco</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_plm_eco_kanban">
                <field name="name"/>
                <field name="title"/>
                <field name="priority"/>
                <field name="approval_state"/>
                <field name="responsible_id"/>
                <field name="color"/>
                <field name="stage_id"/>
                <field name="bom_id"/>
                <progressbar field="approval_state" colors='{"pending": "muted", "partial": "warning", "approved": "success", "rejected": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{kanban_color(record.color.raw_value)}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="title"/>
                                    <div class="text-muted mt-1" t-if="record.bom_id.value">
                                        <i class="fa fa-cubes"/> <field name="bom_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="approval_state" widget="badge"
                                               decoration-success="approval_state == 'approved'"
                                               decoration-warning="approval_state == 'partial'"
                                               decoration-danger="approval_state == 'rejected'"
                                               decoration-muted="approval_state == 'pending'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="responsible_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ECO Tree View -->
    <record id="plm_eco_view_tree" model="ir.ui.view">
        <field name="name">plm.eco.tree</field>
        <field name="model">plm.eco</field>
        <field name="arch" type="xml">
            <list string="Engineering Change Orders" decoration-muted="state == 'cancelled'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="title"/>
                <field name="type_id"/>
                <field name="bom_id" optional="show"/>
                <field name="current_bom_revision" optional="show"/>
                <field name="priority" widget="priority"/>
                <field name="requester_id" widget="many2one_avatar_user"/>
                <field name="responsible_id" widget="many2one_avatar_user" optional="show"/>
                <field name="stage_id"/>
                <field name="approval_state" widget="badge"
                       decoration-success="approval_state == 'approved'"
                       decoration-warning="approval_state == 'partial'"
                       decoration-danger="approval_state == 'rejected'"/>
                <field name="state" invisible="1"/>
                <field name="request_date" optional="hide"/>
                <field name="target_date" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ECO Form View -->
    <record id="plm_eco_view_form" model="ir.ui.view">
        <field name="name">plm.eco.form</field>
        <field name="model">plm.eco</field>
        <field name="arch" type="xml">
            <form string="Engineering Change Order">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_review" string="Start Review" type="object"
                            invisible="state != 'confirmed'"/>
                    <button name="action_approve" string="Approve" type="object"
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_reject" string="Reject" type="object"
                            class="btn-danger" invisible="state != 'in_progress'"/>
                    <button name="action_implement" string="Implement" type="object"
                            class="btn-primary" invisible="approval_state != 'approved' or state == 'done'"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object"
                            invisible="state in ('draft', 'done')" groups="loomworks_plm.group_plm_manager"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_approvals"
                                icon="fa-check-circle">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="approved_count" nolabel="1"/>/<field name="approval_count" nolabel="1"/>
                                </span>
                                <span class="o_stat_text">Approvals</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_documents"
                                icon="fa-file-o" invisible="document_count == 0">
                            <field name="document_count" string="Documents" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_new_bom"
                                icon="fa-cubes" invisible="not new_bom_id">
                            <span class="o_stat_text">New BOM</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" placeholder="New"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="title" placeholder="Brief title for this change..."/>
                            <field name="type_id" options="{'no_create': True}"/>
                            <field name="reason_code"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="requester_id" widget="many2one_avatar_user"/>
                            <field name="responsible_id" widget="many2one_avatar_user"/>
                            <field name="request_date"/>
                            <field name="target_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Change Details" name="changes">
                            <group>
                                <group>
                                    <field name="bom_id" options="{'no_create': True}"/>
                                    <field name="product_id" invisible="1"/>
                                    <field name="product_tmpl_id" readonly="1" string="Product"/>
                                </group>
                                <group>
                                    <field name="current_bom_revision"/>
                                    <field name="new_bom_revision" placeholder="Auto-generated if empty"/>
                                </group>
                            </group>
                            <field name="change_line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="change_type"/>
                                    <field name="old_component_id" optional="show"/>
                                    <field name="new_component_id" optional="show"/>
                                    <field name="old_quantity" optional="show"/>
                                    <field name="new_quantity" optional="show"/>
                                    <field name="cost_impact" sum="Total Impact" optional="show"/>
                                    <field name="notes" optional="hide"/>
                                </list>
                            </field>
                            <group string="Actions" invisible="state != 'done'">
                                <button name="action_compare_bom" string="Compare BOMs" type="object"
                                        class="btn-secondary" icon="fa-exchange"/>
                            </group>
                        </page>
                        <page string="Impact Analysis" name="impact">
                            <group>
                                <group>
                                    <field name="impact_production"/>
                                    <field name="impact_inventory"/>
                                </group>
                                <group>
                                    <field name="impact_cost"/>
                                </group>
                            </group>
                            <separator string="Impact Notes"/>
                            <field name="impact_notes" placeholder="Describe the impact of this change on production, inventory, and costs..."/>
                        </page>
                        <page string="Approvals" name="approvals">
                            <group>
                                <field name="approver_ids" widget="many2many_tags"
                                       options="{'no_create': True}"
                                       readonly="state not in ('draft', 'confirmed')"/>
                                <field name="approval_state" widget="badge"
                                       decoration-success="approval_state == 'approved'"
                                       decoration-warning="approval_state == 'partial'"
                                       decoration-danger="approval_state == 'rejected'"/>
                            </group>
                            <field name="approval_ids" readonly="1">
                                <list create="false" delete="false">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                    <field name="status" widget="badge"
                                           decoration-success="status == 'approved'"
                                           decoration-danger="status == 'rejected'"
                                           decoration-muted="status == 'pending'"/>
                                    <field name="approval_date"/>
                                    <field name="comments"/>
                                    <button name="action_send_reminder" string="Send Reminder" type="object"
                                            icon="fa-bell" invisible="status != 'pending'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Detailed description of proposed changes..."/>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="document_ids" widget="many2many_binary" string="Attachments"/>
                        </page>
                        <page string="Technical" name="technical" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="state"/>
                                    <field name="new_bom_id"/>
                                </group>
                                <group>
                                    <field name="effective_date"/>
                                    <field name="completion_date"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                    <field name="active"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ECO Search View -->
    <record id="plm_eco_view_search" model="ir.ui.view">
        <field name="name">plm.eco.search</field>
        <field name="model">plm.eco</field>
        <field name="arch" type="xml">
            <search string="Search ECOs">
                <field name="name"/>
                <field name="title"/>
                <field name="bom_id"/>
                <field name="requester_id"/>
                <field name="responsible_id"/>
                <separator/>
                <filter string="My ECOs" name="my_ecos" domain="[('requester_id', '=', uid)]"/>
                <filter string="My Pending Approvals" name="my_pending"
                        domain="[('approval_ids.user_id', '=', uid), ('approval_ids.status', '=', 'pending')]"/>
                <filter string="Assigned to Me" name="assigned_to_me" domain="[('responsible_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Approved" name="approved" domain="[('approval_state', '=', 'approved')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Stage" name="group_stage" context="{'group_by': 'stage_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'type_id'}"/>
                    <filter string="Requester" name="group_requester" context="{'group_by': 'requester_id'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_tmpl_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ECO Action -->
    <record id="plm_eco_action" model="ir.actions.act_window">
        <field name="name">Engineering Change Orders</field>
        <field name="res_model">plm.eco</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="plm_eco_view_search"/>
        <field name="context">{'search_default_my_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Engineering Change Order
            </p>
            <p>
                ECOs are used to formally propose, review, and implement changes to Bills of Materials.
                Start by selecting a BOM and describing the changes you want to make.
            </p>
        </field>
    </record>

</loomworks>
