<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Upwork User Group -->
        <record id="group_upwork_user" model="res.groups">
            <field name="name">Upwork User</field>
            <field name="category_id" ref="project.module_category_project"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Upwork Manager Group (implies User) -->
        <record id="group_upwork_manager" model="res.groups">
            <field name="name">Upwork Manager</field>
            <field name="category_id" ref="project.module_category_project"/>
            <field name="implied_ids" eval="[(4, ref('upwork_integration.group_upwork_user'))]"/>
        </record>

    </data>
</odoo>
