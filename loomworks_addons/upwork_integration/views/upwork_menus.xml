<?xml version="1.0" encoding="UTF-8"?>
<loomworks>

    <!-- ============================================================ -->
    <!-- Window Actions                                                -->
    <!-- ============================================================ -->

    <!-- Upwork Accounts Action -->
    <record id="action_upwork_account" model="ir.actions.act_window">
        <field name="name">Upwork Accounts</field>
        <field name="res_model">upwork.account</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Upwork Contracts Action -->
    <record id="action_upwork_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">upwork.contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Upwork Active Contracts Action -->
    <record id="action_upwork_contract_active" model="ir.actions.act_window">
        <field name="name">Active Contracts</field>
        <field name="res_model">upwork.contract</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'active')]</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Upwork Time Logs Action -->
    <record id="upwork_timelog_action" model="ir.actions.act_window">
        <field name="name">Time Logs</field>
        <field name="res_model">upwork.timelog</field>
        <field name="view_mode">list,form,pivot</field>
    </record>

    <!-- Upwork Earning: View Invoice Action -->
    <record id="upwork_earning_action_view_invoice" model="ir.actions.act_window">
        <field name="name">Customer Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form</field>
    </record>

    <!-- Upwork Earning: View Fee Entry Action -->
    <record id="upwork_earning_action_view_fee_entry" model="ir.actions.act_window">
        <field name="name">Fee Journal Entry</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form</field>
    </record>

    <!-- Upwork Earnings Action -->
    <record id="upwork_earning_action" model="ir.actions.act_window">
        <field name="name">Earnings</field>
        <field name="res_model">upwork.earning</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Upwork Proposals Action -->
    <record id="upwork_proposal_action" model="ir.actions.act_window">
        <field name="name">Proposals</field>
        <field name="res_model">upwork.proposal</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Upwork My Proposals Action -->
    <record id="upwork_proposal_action_my" model="ir.actions.act_window">
        <field name="name">My Proposals</field>
        <field name="res_model">upwork.proposal</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', 'in', ['submitted', 'hired'])]</field>
        <field name="context">{'search_default_submitted': 1}</field>
    </record>

    <!-- Upwork Settings Action -->
    <record id="action_upwork_settings" model="ir.actions.act_window">
        <field name="name">Upwork Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="context">{'module': 'upwork_integration'}</field>
    </record>

    <!-- ============================================================ -->
    <!-- Server Actions                                                -->
    <!-- ============================================================ -->

    <!-- Create Timesheets Server Action -->
    <record id="upwork_timelog_action_create_timesheets" model="ir.actions.server">
        <field name="name">Create Timesheets</field>
        <field name="model_id" ref="model_upwork_timelog"/>
        <field name="binding_model_id" ref="model_upwork_timelog"/>
        <field name="state">code</field>
        <field name="code">
action = records.action_create_timesheets()
        </field>
    </record>

    <!-- Create Invoices Server Action -->
    <record id="upwork_earning_action_create_invoices" model="ir.actions.server">
        <field name="name">Create Invoices</field>
        <field name="model_id" ref="model_upwork_earning"/>
        <field name="binding_model_id" ref="model_upwork_earning"/>
        <field name="state">code</field>
        <field name="code">
action = records.action_create_invoices()
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Menu Items                                                    -->
    <!-- ============================================================ -->

    <!-- Top-level Upwork Menu -->
    <menuitem id="menu_upwork_root"
        name="Upwork"
        sequence="10"
        web_icon="upwork_integration,static/description/icon.png"/>

    <!-- Contracts Menu -->
    <menuitem id="menu_upwork_contracts"
        name="Contracts"
        parent="menu_upwork_root"
        action="action_upwork_contract"
        sequence="10"/>

    <!-- Time Logs Menu -->
    <menuitem id="menu_upwork_timelogs"
        name="Time Logs"
        parent="menu_upwork_root"
        action="upwork_timelog_action"
        sequence="20"/>

    <!-- Earnings Menu -->
    <menuitem id="menu_upwork_earnings"
        name="Earnings"
        parent="menu_upwork_root"
        action="upwork_earning_action"
        sequence="30"/>

    <!-- Proposals Menu -->
    <menuitem id="menu_upwork_proposals"
        name="Proposals"
        parent="menu_upwork_root"
        action="upwork_proposal_action"
        sequence="40"/>

    <!-- Accounts Menu -->
    <menuitem id="menu_upwork_accounts"
        name="Accounts"
        parent="menu_upwork_root"
        action="action_upwork_account"
        sequence="90"/>

</loomworks>
