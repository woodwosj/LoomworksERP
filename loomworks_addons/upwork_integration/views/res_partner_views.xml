<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Partner Form: Upwork Tab -->
    <record id="res_partner_view_form_upwork" model="ir.ui.view">
        <field name="name">res.partner.view.form.upwork</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Upwork" name="upwork" invisible="upwork_contract_count == 0">
                    <group>
                        <group>
                            <field name="upwork_client_id"/>
                            <field name="upwork_contract_count"/>
                        </group>
                    </group>
                    <field name="upwork_contract_ids">
                        <list string="Upwork Contracts">
                            <field name="name"/>
                            <field name="contract_type"/>
                            <field name="state" widget="badge"/>
                            <field name="hourly_rate" optional="show"/>
                            <field name="start_date"/>
                            <field name="end_date" optional="hide"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
