<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- App Models Action (for button box) - must be before form view -->
    <record id="action_studio_app_models" model="ir.actions.act_window">
        <field name="name">Models</field>
        <field name="res_model">ir.model</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('studio_app_id', '=', active_id)]</field>
        <field name="context">{'default_studio_app_id': active_id}</field>
    </record>

    <!-- App Automations Action (for button box) - must be before form view -->
    <record id="action_studio_app_automations" model="ir.actions.act_window">
        <field name="name">Automations</field>
        <field name="res_model">studio.automation</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('app_id', '=', active_id)]</field>
        <field name="context">{'default_app_id': active_id}</field>
    </record>

    <!-- Studio App Form View -->
    <record id="studio_app_view_form" model="ir.ui.view">
        <field name="name">studio.app.form</field>
        <field name="model">studio.app</field>
        <field name="arch" type="xml">
            <form string="Studio Application">
                <header>
                    <button name="action_publish" type="object" string="Publish"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_archive" type="object" string="Archive"
                            invisible="state != 'published'" confirm="Are you sure you want to archive this app?"/>
                    <button name="action_unarchive" type="object" string="Restore"
                            invisible="state != 'archived'"/>
                    <button name="action_export" type="object" string="Export" icon="fa-download"
                            groups="loomworks_studio.group_studio_admin"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(loomworks_studio.action_studio_app_models)d" type="action"
                                class="oe_stat_button" icon="fa-database">
                            <field name="model_count" widget="statinfo" string="Models"/>
                        </button>
                        <button name="%(loomworks_studio.action_studio_app_automations)d" type="action"
                                class="oe_stat_button" icon="fa-cogs">
                            <field name="automation_count" widget="statinfo" string="Automations"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            invisible="state != 'archived'"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Application Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="technical_name"/>
                            <field name="icon" widget="char"/>
                            <field name="color" widget="color_picker"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="created_by_id" readonly="1"/>
                            <field name="published_date" readonly="1"/>
                            <field name="record_count" readonly="1"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Describe what this application does..."/>
                    </group>
                    <notebook>
                        <page string="Models" name="models">
                            <field name="model_ids" readonly="1">
                                <list string="Models">
                                    <field name="name"/>
                                    <field name="model"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Automations" name="automations">
                            <field name="automation_ids">
                                <list string="Automations">
                                    <field name="name"/>
                                    <field name="model_id"/>
                                    <field name="trigger_type"/>
                                    <field name="action_type"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="View Customizations" name="view_customizations">
                            <field name="view_customization_ids">
                                <list string="View Customizations">
                                    <field name="name"/>
                                    <field name="model_name"/>
                                    <field name="view_type"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Studio App List View -->
    <record id="studio_app_view_list" model="ir.ui.view">
        <field name="name">studio.app.list</field>
        <field name="model">studio.app</field>
        <field name="arch" type="xml">
            <list string="Studio Applications">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="technical_name"/>
                <field name="icon"/>
                <field name="model_count"/>
                <field name="record_count"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'published'"
                       decoration-muted="state == 'archived'"/>
            </list>
        </field>
    </record>

    <!-- Studio App Kanban View -->
    <record id="studio_app_view_kanban" model="ir.ui.view">
        <field name="name">studio.app.kanban</field>
        <field name="model">studio.app</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="icon"/>
                <field name="color"/>
                <field name="model_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill #{record.state.raw_value == 'archived' ? 'o_kanban_record_disabled' : ''}">
                            <div class="o_kanban_image_fill_left d-none d-md-block"
                                 t-attf-style="background-color: var(--o-kanban-color-#{record.color.raw_value or 0});">
                                <i t-attf-class="fa #{record.icon.raw_value or 'fa-cube'} fa-3x text-white p-3"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <span><field name="model_count"/> models</span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'info', 'published': 'success', 'archived': 'secondary'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Studio App Search View -->
    <record id="studio_app_view_search" model="ir.ui.view">
        <field name="name">studio.app.search</field>
        <field name="model">studio.app</field>
        <field name="arch" type="xml">
            <search string="Search Studio Apps">
                <field name="name"/>
                <field name="technical_name"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Created By" name="group_created_by" context="{'group_by': 'created_by_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Studio App Action -->
    <record id="action_studio_app" model="ir.actions.act_window">
        <field name="name">Studio Apps</field>
        <field name="res_model">studio.app</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_published': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first custom application!
            </p>
            <p>
                Studio apps let you build custom business applications without coding.
                Create models, add fields, design views, and set up automations.
            </p>
        </field>
    </record>

</odoo>
