<?xml version="1.0" encoding="utf-8"?>
<loomworks>
    <data noupdate="1">

        <!-- Studio Module Category -->
        <record id="module_category_studio" model="ir.module.category">
            <field name="name">Studio</field>
            <field name="description">No-code application builder for customizing Loomworks ERP</field>
            <field name="sequence">50</field>
        </record>

        <!-- Studio User Group -->
        <record id="group_studio_user" model="res.groups">
            <field name="name">Studio User</field>
            <field name="category_id" ref="module_category_studio"/>
            <field name="comment">Can use Studio to customize views and create simple automations</field>
        </record>

        <!-- Studio Manager Group (inherits User) -->
        <record id="group_studio_manager" model="res.groups">
            <field name="name">Studio Manager</field>
            <field name="category_id" ref="module_category_studio"/>
            <field name="implied_ids" eval="[(4, ref('group_studio_user'))]"/>
            <field name="comment">Can create new models, apps, and complex automations</field>
        </record>

        <!-- Studio Admin Group (inherits Manager) -->
        <record id="group_studio_admin" model="res.groups">
            <field name="name">Studio Administrator</field>
            <field name="category_id" ref="module_category_studio"/>
            <field name="implied_ids" eval="[(4, ref('group_studio_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Full Studio access including export/import and dangerous operations</field>
        </record>

    </data>
</loomworks>
