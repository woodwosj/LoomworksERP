<?xml version="1.0" encoding="utf-8"?>
<loomworks>
    <data noupdate="1">

        <!-- Default Email Template for Studio Automations -->
        <record id="email_template_studio_notification" model="mail.template">
            <field name="name">Studio: Default Notification</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Notification: {{object.display_name}}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p>Hello,</p>
    <p>This is an automated notification from Loomworks Studio.</p>
    <p>Record: {{object.display_name}}</p>
    <p>Best regards,<br/>Loomworks ERP</p>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</loomworks>
