<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Module Category -->
    <record id="module_category_appointment" model="ir.module.category">
        <field name="name">Appointment</field>
        <field name="description">Online Appointment Booking</field>
        <field name="sequence">20</field>
    </record>

    <!-- User Groups -->
    <record id="group_appointment_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_appointment"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Can view and manage own appointments</field>
    </record>

    <record id="group_appointment_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_appointment"/>
        <field name="implied_ids" eval="[(4, ref('group_appointment_user'))]"/>
        <field name="comment">Full access to appointment configuration</field>
    </record>

    <!-- Record Rules -->

    <!-- Appointment Type: Users can view published types -->
    <record id="appointment_type_rule_user" model="ir.rule">
        <field name="name">Appointment Type: User can view published</field>
        <field name="model_id" ref="model_appointment_type"/>
        <field name="domain_force">[('is_published', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Appointment Type: Managers have full access -->
    <record id="appointment_type_rule_manager" model="ir.rule">
        <field name="name">Appointment Type: Manager full access</field>
        <field name="model_id" ref="model_appointment_type"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_manager'))]"/>
    </record>

    <!-- Booking: Users can view their own bookings -->
    <record id="appointment_booking_rule_own" model="ir.rule">
        <field name="name">Appointment Booking: Own bookings</field>
        <field name="model_id" ref="model_appointment_booking"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
    </record>

    <!-- Booking: Users can view bookings they are resource for -->
    <record id="appointment_booking_rule_resource" model="ir.rule">
        <field name="name">Appointment Booking: As resource</field>
        <field name="model_id" ref="model_appointment_booking"/>
        <field name="domain_force">[('resource_id.employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
    </record>

    <!-- Booking: Managers have full access -->
    <record id="appointment_booking_rule_manager" model="ir.rule">
        <field name="name">Appointment Booking: Manager full access</field>
        <field name="model_id" ref="model_appointment_booking"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_manager'))]"/>
    </record>

    <!-- Resource: Users can view all active resources -->
    <record id="appointment_resource_rule_user" model="ir.rule">
        <field name="name">Appointment Resource: User can view active</field>
        <field name="model_id" ref="model_appointment_resource"/>
        <field name="domain_force">[('active', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Resource: Users can manage their own resource -->
    <record id="appointment_resource_rule_own" model="ir.rule">
        <field name="name">Appointment Resource: Own resource</field>
        <field name="model_id" ref="model_appointment_resource"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
    </record>

    <!-- Resource: Managers have full access -->
    <record id="appointment_resource_rule_manager" model="ir.rule">
        <field name="name">Appointment Resource: Manager full access</field>
        <field name="model_id" ref="model_appointment_resource"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_appointment_manager'))]"/>
    </record>

    <!-- Multi-company rules -->
    <record id="appointment_type_comp_rule" model="ir.rule">
        <field name="name">Appointment Type: Multi-company</field>
        <field name="model_id" ref="model_appointment_type"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="appointment_booking_comp_rule" model="ir.rule">
        <field name="name">Appointment Booking: Multi-company</field>
        <field name="model_id" ref="model_appointment_booking"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="appointment_resource_comp_rule" model="ir.rule">
        <field name="name">Appointment Resource: Multi-company</field>
        <field name="model_id" ref="model_appointment_resource"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
