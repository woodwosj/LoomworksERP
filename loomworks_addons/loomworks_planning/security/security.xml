<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Planning Module Category -->
        <record id="module_category_planning" model="ir.module.category">
            <field name="name">Planning</field>
            <field name="description">Workforce scheduling and shift planning</field>
            <field name="sequence">35</field>
        </record>

        <!-- Planning User Group -->
        <record id="group_planning_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_planning"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">View own schedule and assigned shifts</field>
        </record>

        <!-- Planning Manager Group -->
        <record id="group_planning_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_planning"/>
            <field name="implied_ids" eval="[(4, ref('group_planning_user'))]"/>
            <field name="comment">Create and manage all schedules</field>
        </record>

        <!-- Planning Admin Group -->
        <record id="group_planning_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_planning"/>
            <field name="implied_ids" eval="[(4, ref('group_planning_manager'))]"/>
            <field name="comment">Full access to planning configuration</field>
        </record>

        <!-- Record Rules -->

        <!-- Users see only their own slots -->
        <record id="rule_planning_slot_user" model="ir.rule">
            <field name="name">Planning: Users see own slots</field>
            <field name="model_id" ref="model_planning_slot"/>
            <field name="domain_force">[
                '|',
                ('employee_id.user_id', '=', user.id),
                ('is_published', '=', True)
            ]</field>
            <field name="groups" eval="[(4, ref('group_planning_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers see all slots in their company -->
        <record id="rule_planning_slot_manager" model="ir.rule">
            <field name="name">Planning: Managers see company slots</field>
            <field name="model_id" ref="model_planning_slot"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_planning_manager'))]"/>
        </record>

        <!-- Role: Multi-company rule -->
        <record id="rule_planning_role_company" model="ir.rule">
            <field name="name">Planning Role: Multi-company</field>
            <field name="model_id" ref="model_planning_role"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Template: Multi-company rule -->
        <record id="rule_planning_template_company" model="ir.rule">
            <field name="name">Planning Template: Multi-company</field>
            <field name="model_id" ref="model_planning_slot_template"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Recurrence: Multi-company rule -->
        <record id="rule_planning_recurrence_company" model="ir.rule">
            <field name="name">Planning Recurrence: Multi-company</field>
            <field name="model_id" ref="model_planning_recurrence"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
