<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Planning Slot Form View -->
    <record id="planning_slot_view_form" model="ir.ui.view">
        <field name="name">planning.slot.form</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <form string="Planning Slot">
                <header>
                    <button name="action_publish" string="Publish" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_unpublish" string="Unpublish" type="object"
                            invisible="state != 'published'"/>
                    <button name="action_mark_done" string="Mark Done" type="object"
                            class="btn-success" invisible="state not in ['published']"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ['done', 'cancelled']"/>
                    <button name="action_draft" string="Reset to Draft" type="object"
                            invisible="state not in ['cancelled']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,published,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_copy_to_next_week" type="object"
                                class="oe_stat_button" icon="fa-copy"
                                string="Copy to Next Week"/>
                    </div>
                    <widget name="web_ribbon" title="Conflict!" bg_color="text-bg-danger"
                            invisible="not has_conflict"/>
                    <group>
                        <group string="Assignment">
                            <field name="employee_id"/>
                            <field name="role_id"/>
                            <field name="template_id"/>
                        </group>
                        <group string="Schedule">
                            <field name="start_datetime"/>
                            <field name="end_datetime"/>
                            <field name="allocated_hours" readonly="1"/>
                            <field name="allocated_percentage"/>
                        </group>
                    </group>
                    <group>
                        <group string="Project Link" invisible="not project_id">
                            <field name="project_id"/>
                            <field name="task_id"/>
                        </group>
                        <group string="Recurrence" invisible="not recurrence_id">
                            <field name="recurrence_id"/>
                            <field name="recurrency_update"/>
                        </group>
                    </group>
                    <group string="Conflict Details" invisible="not has_conflict">
                        <field name="conflict_description" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Planning Slot List View -->
    <record id="planning_slot_view_list" model="ir.ui.view">
        <field name="name">planning.slot.list</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <list string="Planning Slots"
                  decoration-danger="has_conflict"
                  decoration-success="state == 'done'"
                  decoration-muted="state == 'cancelled'">
                <field name="employee_id" widget="many2one_avatar_user"/>
                <field name="role_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="allocated_hours" sum="Total Hours"/>
                <field name="project_id" optional="hide"/>
                <field name="has_conflict" widget="boolean"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'published'"
                       decoration-primary="state == 'done'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Planning Slot Gantt View -->
    <record id="planning_slot_view_gantt" model="ir.ui.view">
        <field name="name">planning.slot.gantt</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <gantt string="Planning"
                   date_start="start_datetime"
                   date_stop="end_datetime"
                   color="role_id"
                   default_group_by="employee_id"
                   progress="progress"
                   decoration-danger="has_conflict"
                   display_unavailability="true">
                <field name="employee_id"/>
                <field name="role_id"/>
                <field name="has_conflict"/>
                <field name="conflict_description"/>
                <field name="allocated_hours"/>
                <field name="state"/>
            </gantt>
        </field>
    </record>

    <!-- Planning Slot Calendar View -->
    <record id="planning_slot_view_calendar" model="ir.ui.view">
        <field name="name">planning.slot.calendar</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <calendar string="Planning" date_start="start_datetime" date_stop="end_datetime"
                      color="role_id" quick_create="false" event_open_popup="true">
                <field name="employee_id"/>
                <field name="role_id"/>
                <field name="allocated_hours"/>
            </calendar>
        </field>
    </record>

    <!-- Planning Slot Kanban View -->
    <record id="planning_slot_view_kanban" model="ir.ui.view">
        <field name="name">planning.slot.kanban</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <kanban class="o_planning_kanban" default_group_by="state"
                    quick_create="false" records_draggable="true">
                <field name="id"/>
                <field name="employee_id"/>
                <field name="role_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="allocated_hours"/>
                <field name="has_conflict"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-card">
                        <div t-attf-class="o_kanban_record #{record.has_conflict.raw_value ? 'border-danger' : ''}">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="employee_id"/>
                                    </strong>
                                </div>
                                <span t-if="record.has_conflict.raw_value" class="badge text-bg-danger">
                                    Conflict
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="mb-1">
                                    <i class="fa fa-user-circle me-1"/>
                                    <field name="role_id"/>
                                </div>
                                <div class="text-muted small">
                                    <i class="fa fa-clock-o me-1"/>
                                    <field name="start_datetime" widget="datetime"/>
                                </div>
                                <div class="text-muted small">
                                    <i class="fa fa-hourglass me-1"/>
                                    <field name="allocated_hours"/> hours
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Planning Slot Search View -->
    <record id="planning_slot_view_search" model="ir.ui.view">
        <field name="name">planning.slot.search</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <search string="Search Planning">
                <field name="employee_id"/>
                <field name="role_id"/>
                <field name="project_id"/>
                <filter string="My Slots" name="my_slots"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Today" name="today"
                        domain="[('start_datetime', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                                 ('start_datetime', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week" name="this_week"
                        domain="[('start_datetime', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('start_datetime', '&lt;=', (context_today() + relativedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Next Week" name="next_week"
                        domain="[('start_datetime', '&gt;=', (context_today() + relativedelta(weeks=1, days=-context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('start_datetime', '&lt;=', (context_today() + relativedelta(weeks=1, days=6-context_today().weekday())).strftime('%Y-%m-%d 23:59:59'))]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Has Conflict" name="conflicts" domain="[('has_conflict', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Role" name="group_role" context="{'group_by': 'role_id'}"/>
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'start_datetime:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Planning Slot Pivot View -->
    <record id="planning_slot_view_pivot" model="ir.ui.view">
        <field name="name">planning.slot.pivot</field>
        <field name="model">planning.slot</field>
        <field name="arch" type="xml">
            <pivot string="Planning Analysis">
                <field name="employee_id" type="row"/>
                <field name="role_id" type="col"/>
                <field name="allocated_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Main Planning Slot Action -->
    <record id="action_planning_slot" model="ir.actions.act_window">
        <field name="name">Planning</field>
        <field name="res_model">planning.slot</field>
        <field name="view_mode">gantt,list,form,calendar,kanban,pivot</field>
        <field name="search_view_id" ref="planning_slot_view_search"/>
        <field name="context">{
            'search_default_this_week': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first planning slot
            </p>
            <p>
                Plan employee schedules using the Gantt view for visual scheduling.
            </p>
        </field>
    </record>

    <!-- My Schedule Action -->
    <record id="action_planning_my_schedule" model="ir.actions.act_window">
        <field name="name">My Schedule</field>
        <field name="res_model">planning.slot</field>
        <field name="view_mode">calendar,gantt,list</field>
        <field name="search_view_id" ref="planning_slot_view_search"/>
        <field name="context">{
            'search_default_my_slots': 1,
            'search_default_this_week': 1,
        }</field>
    </record>

    <!-- Conflicts Action -->
    <record id="action_planning_conflicts" model="ir.actions.act_window">
        <field name="name">Scheduling Conflicts</field>
        <field name="res_model">planning.slot</field>
        <field name="view_mode">list,form,gantt</field>
        <field name="domain">[('has_conflict', '=', True)]</field>
        <field name="context">{'create': False}</field>
    </record>
</odoo>
