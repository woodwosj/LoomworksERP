<?xml version="1.0" encoding="utf-8"?>
<loomworks>
    <!-- Planning Slot Template Form View -->
    <record id="planning_slot_template_view_form" model="ir.ui.view">
        <field name="name">planning.slot.template.form</field>
        <field name="model">planning.slot.template</field>
        <field name="arch" type="xml">
            <form string="Shift Template">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Time Settings">
                            <field name="role_id"/>
                            <label for="start_time"/>
                            <div class="o_row">
                                <field name="start_time" widget="float_time"/>
                                <span class="mx-2">to</span>
                                <field name="end_time" widget="float_time" readonly="1"/>
                            </div>
                            <field name="duration"/>
                        </group>
                        <group string="Defaults">
                            <field name="employee_id"/>
                            <field name="project_id"/>
                            <field name="task_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Planning Slot Template List View -->
    <record id="planning_slot_template_view_list" model="ir.ui.view">
        <field name="name">planning.slot.template.list</field>
        <field name="model">planning.slot.template</field>
        <field name="arch" type="xml">
            <list string="Shift Templates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="role_id"/>
                <field name="start_time" widget="float_time"/>
                <field name="duration"/>
                <field name="end_time" widget="float_time"/>
                <field name="employee_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Planning Slot Template Search View -->
    <record id="planning_slot_template_view_search" model="ir.ui.view">
        <field name="name">planning.slot.template.search</field>
        <field name="model">planning.slot.template</field>
        <field name="arch" type="xml">
            <search string="Search Templates">
                <field name="name"/>
                <field name="role_id"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Role" name="group_role" context="{'group_by': 'role_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Planning Slot Template Action -->
    <record id="action_planning_slot_template" model="ir.actions.act_window">
        <field name="name">Shift Templates</field>
        <field name="res_model">planning.slot.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="planning_slot_template_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shift template
            </p>
            <p>
                Shift templates define standard working hours for quick slot creation.
            </p>
        </field>
    </record>
</loomworks>
