<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Planning Role Form View -->
    <record id="planning_role_view_form" model="ir.ui.view">
        <field name="name">planning.role.form</field>
        <field name="model">planning.role</field>
        <field name="arch" type="xml">
            <form string="Planning Role">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_slots" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                            <field name="slot_count" widget="statinfo" string="Slots"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Role Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="default_hours"/>
                            <label for="hourly_rate"/>
                            <div class="o_row">
                                <field name="hourly_rate"/>
                                <field name="currency_id" options="{'no_open': True, 'no_create': True}" groups="base.group_multi_currency"/>
                            </div>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Describe this role..."/>
                    </group>
                    <group string="Required Skills" invisible="1">
                        <!-- Only visible if hr_skills module is installed -->
                        <field name="skill_ids" widget="many2many_tags" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Planning Role List View -->
    <record id="planning_role_view_list" model="ir.ui.view">
        <field name="name">planning.role.list</field>
        <field name="model">planning.role</field>
        <field name="arch" type="xml">
            <list string="Planning Roles">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color" widget="color_picker"/>
                <field name="default_hours"/>
                <field name="slot_count"/>
            </list>
        </field>
    </record>

    <!-- Planning Role Kanban View -->
    <record id="planning_role_view_kanban" model="ir.ui.view">
        <field name="name">planning.role.kanban</field>
        <field name="model">planning.role</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color"/>
                <field name="default_hours"/>
                <field name="slot_count"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="o_kanban_record">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <span class="badge" t-att-style="'background-color: ' + record.color.value">
                                    <field name="code"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body text-muted">
                                <span><field name="default_hours"/> hours</span>
                                <span class="float-end"><field name="slot_count"/> slots</span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Planning Role Search View -->
    <record id="planning_role_view_search" model="ir.ui.view">
        <field name="name">planning.role.search</field>
        <field name="model">planning.role</field>
        <field name="arch" type="xml">
            <search string="Search Roles">
                <field name="name"/>
                <field name="code"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Planning Role Action -->
    <record id="action_planning_role" model="ir.actions.act_window">
        <field name="name">Planning Roles</field>
        <field name="res_model">planning.role</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="planning_role_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first planning role
            </p>
            <p>
                Roles define the type of work or position for planning slots.
            </p>
        </field>
    </record>
</odoo>
