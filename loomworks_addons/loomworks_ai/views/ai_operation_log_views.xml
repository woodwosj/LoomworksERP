<loomworks>

    <!-- AI Operation Log Form View -->
    <record id="loomworks_ai_operation_log_view_form" model="ir.ui.view">
        <field name="name">loomworks.ai.operation.log.form</field>
        <field name="model">loomworks.ai.operation.log</field>
        <field name="arch" type="xml">
            <form string="AI Operation Log" create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Operation Details">
                            <field name="tool_name"/>
                            <field name="operation_type"/>
                            <field name="model_name"/>
                            <field name="record_count"/>
                            <field name="execution_time_ms"/>
                        </group>
                        <group string="Session Info">
                            <field name="session_id"/>
                            <field name="agent_id"/>
                            <field name="user_id"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <group string="Record IDs">
                        <field name="record_ids" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Input Data" name="input">
                            <field name="input_data" widget="text" readonly="1"/>
                        </page>
                        <page string="Output Data" name="output">
                            <field name="output_data" widget="text" readonly="1"/>
                        </page>
                        <page string="Values Before" name="before" invisible="not values_before">
                            <field name="values_before" widget="text" readonly="1"/>
                        </page>
                        <page string="Values After" name="after" invisible="not values_after">
                            <field name="values_after" widget="text" readonly="1"/>
                        </page>
                        <page string="Error" name="error" invisible="state != 'error'">
                            <field name="error_message" nolabel="1" readonly="1"/>
                        </page>
                        <page string="AI Reasoning" name="reasoning" invisible="not ai_reasoning">
                            <field name="ai_reasoning" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Operation Log Tree View -->
    <record id="loomworks_ai_operation_log_view_tree" model="ir.ui.view">
        <field name="name">loomworks.ai.operation.log.tree</field>
        <field name="model">loomworks.ai.operation.log</field>
        <field name="arch" type="xml">
            <list string="AI Operation Logs" create="0" edit="0">
                <field name="create_date"/>
                <field name="session_id"/>
                <field name="user_id"/>
                <field name="tool_name"/>
                <field name="operation_type"/>
                <field name="model_name"/>
                <field name="record_count"/>
                <field name="state" decoration-success="state == 'success'"
                       decoration-danger="state == 'error'"
                       decoration-muted="state in ('rolled_back', 'skipped')"
                       widget="badge"/>
                <field name="execution_time_ms"/>
            </list>
        </field>
    </record>

    <!-- AI Operation Log Search View -->
    <record id="loomworks_ai_operation_log_view_search" model="ir.ui.view">
        <field name="name">loomworks.ai.operation.log.search</field>
        <field name="model">loomworks.ai.operation.log</field>
        <field name="arch" type="xml">
            <search string="AI Operation Logs">
                <field name="tool_name"/>
                <field name="model_name"/>
                <field name="user_id"/>
                <field name="session_id"/>
                <filter name="success" string="Success" domain="[('state', '=', 'success')]"/>
                <filter name="errors" string="Errors" domain="[('state', '=', 'error')]"/>
                <filter name="rolled_back" string="Rolled Back" domain="[('state', '=', 'rolled_back')]"/>
                <separator/>
                <filter name="my_operations" string="My Operations" domain="[('user_id', '=', uid)]"/>
                <filter name="today" string="Today" domain="[('create_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0, 0, 0)))]"/>
                <separator/>
                <filter name="creates" string="Creates" domain="[('operation_type', '=', 'create')]"/>
                <filter name="updates" string="Updates" domain="[('operation_type', '=', 'write')]"/>
                <filter name="deletes" string="Deletes" domain="[('operation_type', '=', 'unlink')]"/>
                <filter name="actions" string="Actions" domain="[('operation_type', '=', 'action')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_session" string="Session" context="{'group_by': 'session_id'}"/>
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_tool" string="Tool" context="{'group_by': 'tool_name'}"/>
                    <filter name="group_type" string="Operation Type" context="{'group_by': 'operation_type'}"/>
                    <filter name="group_model" string="Model" context="{'group_by': 'model_name'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AI Operation Log Action -->
    <record id="action_ai_operation_log" model="ir.actions.act_window">
        <field name="name">Operation Logs</field>
        <field name="res_model">loomworks.ai.operation.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No AI operations yet
            </p>
            <p>
                All AI operations are logged here for audit and compliance.
                You can review what changes were made and by which AI agent.
            </p>
        </field>
    </record>

</loomworks>
