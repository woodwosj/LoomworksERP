<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- FSM Module Category -->
        <record id="module_category_fsm" model="ir.module.category">
            <field name="name">Field Service</field>
            <field name="description">Manage field service operations</field>
            <field name="sequence">30</field>
        </record>

        <!-- FSM User (Technician) Group -->
        <record id="group_fsm_user" model="res.groups">
            <field name="name">Field Technician</field>
            <field name="category_id" ref="module_category_fsm"/>
            <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
            <field name="comment">Field technicians can view assigned tasks and complete work</field>
        </record>

        <!-- FSM Dispatcher Group -->
        <record id="group_fsm_dispatcher" model="res.groups">
            <field name="name">Dispatcher</field>
            <field name="category_id" ref="module_category_fsm"/>
            <field name="implied_ids" eval="[(4, ref('group_fsm_user'))]"/>
            <field name="comment">Dispatchers can assign tasks and view all technicians</field>
        </record>

        <!-- FSM Manager Group -->
        <record id="group_fsm_manager" model="res.groups">
            <field name="name">FSM Manager</field>
            <field name="category_id" ref="module_category_fsm"/>
            <field name="implied_ids" eval="[(4, ref('group_fsm_dispatcher'))]"/>
            <field name="comment">Full access to FSM configuration</field>
        </record>

        <!-- Record Rules -->

        <!-- Technicians see only their assigned FSM tasks -->
        <record id="rule_fsm_task_technician" model="ir.rule">
            <field name="name">FSM: Technician Own Tasks</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[
                '|',
                ('is_fsm', '=', False),
                '|',
                ('fsm_user_id', '=', user.id),
                ('user_ids', 'in', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_fsm_user'))]"/>
        </record>

        <!-- Dispatchers see all FSM tasks in their company -->
        <record id="rule_fsm_task_dispatcher" model="ir.rule">
            <field name="name">FSM: Dispatcher All Tasks</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fsm_dispatcher'))]"/>
        </record>

        <!-- Worksheet templates - company rule -->
        <record id="rule_fsm_worksheet_template_company" model="ir.rule">
            <field name="name">FSM Worksheet Template: Multi-company</field>
            <field name="model_id" ref="model_fsm_worksheet_template"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
