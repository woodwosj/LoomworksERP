<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sign Security Groups -->

    <record id="module_category_sign" model="ir.module.category">
        <field name="name">Sign</field>
        <field name="description">Electronic Signatures</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_sign_user" model="res.groups">
        <field name="name">Sign User</field>
        <field name="category_id" ref="module_category_sign"/>
        <field name="comment">Can create and send signature requests</field>
    </record>

    <record id="group_sign_manager" model="res.groups">
        <field name="name">Sign Manager</field>
        <field name="category_id" ref="module_category_sign"/>
        <field name="implied_ids" eval="[(4, ref('group_sign_user'))]"/>
        <field name="comment">Can manage templates and view all requests</field>
    </record>

    <!-- Record Rules -->

    <record id="sign_request_rule_user" model="ir.rule">
        <field name="name">Sign Request: User sees own company</field>
        <field name="model_id" ref="model_sign_request"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_sign_user'))]"/>
    </record>

    <record id="sign_request_rule_own" model="ir.rule">
        <field name="name">Sign Request: User sees own requests</field>
        <field name="model_id" ref="model_sign_request"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sign_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="sign_template_rule_active" model="ir.rule">
        <field name="name">Sign Template: Users see active templates</field>
        <field name="model_id" ref="model_sign_template"/>
        <field name="domain_force">[('active', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_sign_user'))]"/>
    </record>

</odoo>
