        <field name="auto_fill_field">email</field>
        <field name="default_width">30.0</field>
        <field name="default_height">4.0</field>
    </record>

    <record id="sign_item_type_date" model="sign.item.type">
        <field name="name">Date</field>
        <field name="technical_name">date</field>
        <field name="item_type">date</field>
        <field name="sequence">50</field>
        <field name="icon">fa-calendar</field>
        <field name="default_width">15.0</field>
        <field name="default_height">4.0</field>
    </record>

    <record id="sign_item_type_text" model="sign.item.type">
        <field name="name">Text</field>
        <field name="technical_name">text</field>
