        <field name="sequence">20</field>
        <field name="icon">fa-font</field>
        <field name="default_width">10.0</field>
        <field name="default_height">5.0</field>
    </record>

    <record id="sign_item_type_name" model="sign.item.type">
        <field name="name">Full Name</field>
        <field name="technical_name">name</field>
        <field name="item_type">name</field>
        <field name="sequence">30</field>
        <field name="icon">fa-user</field>
        <field name="auto_fill">True</field>
        <field name="auto_fill_field">name</field>
        <field name="default_width">30.0</field>
        <field name="default_height">4.0</field>
    </record>

    <record id="sign_item_type_email" model="sign.item.type">
        <field name="name">Email</field>
        <field name="technical_name">email</field>
        <field name="item_type">email</field>
        <field name="sequence">40</field>
        <field name="icon">fa-envelope</field>
