<?xml version="1.0" encoding="utf-8"?>
<loomworks noupdate="1">

    <!-- Signature Field Types -->
    <record id="sign_item_type_signature" model="sign.item.type">
        <field name="name">Signature</field>
        <field name="technical_name">signature</field>
        <field name="item_type">signature</field>
        <field name="sequence">10</field>
        <field name="icon">fa-pencil</field>
        <field name="default_width">25.0</field>
        <field name="default_height">8.0</field>
    </record>

    <record id="sign_item_type_initial" model="sign.item.type">
        <field name="name">Initials</field>
        <field name="technical_name">initial</field>
