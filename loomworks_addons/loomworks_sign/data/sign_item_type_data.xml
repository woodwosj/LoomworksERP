    <record id="sign_item_type_company" model="sign.item.type">
        <field name="name">Company</field>
        <field name="technical_name">company</field>
        <field name="item_type">company</field>
        <field name="sequence">90</field>
        <field name="icon">fa-building</field>
        <field name="auto_fill">True</field>
        <field name="auto_fill_field">company_id.name</field>
        <field name="default_width">30.0</field>
        <field name="default_height">4.0</field>
    </record>

</loomworks>
