        <field name="icon">fa-align-left</field>
        <field name="default_width">40.0</field>
        <field name="default_height">10.0</field>
    </record>

    <record id="sign_item_type_checkbox" model="sign.item.type">
        <field name="name">Checkbox</field>
        <field name="technical_name">checkbox</field>
        <field name="item_type">checkbox</field>
        <field name="sequence">80</field>
        <field name="icon">fa-check-square</field>
        <field name="default_width">3.0</field>
        <field name="default_height">3.0</field>
