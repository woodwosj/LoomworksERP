<loomworks>
    <!-- Action for tenant's snapshots (must be defined before form view that references it) -->
    <record id="action_tenant_snapshots" model="ir.actions.act_window">
        <field name="name">Tenant Snapshots</field>
        <field name="res_model">loomworks.snapshot</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('tenant_id', '=', active_id)]</field>
    </record>

    <!-- Tenant Tree View -->
    <record id="view_tenant_tree" model="ir.ui.view">
        <field name="name">loomworks.tenant.tree</field>
        <field name="model">loomworks.tenant</field>
        <field name="arch" type="xml">
            <list string="Tenants" decoration-success="state == 'active'" decoration-warning="state == 'suspended'" decoration-muted="state == 'archived'">
                <field name="name"/>
                <field name="subdomain"/>
                <field name="database_name"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-warning="state in ('draft', 'provisioning', 'suspended')" decoration-muted="state == 'archived'"/>
                <field name="tier"/>
                <field name="max_users"/>
                <field name="current_users"/>
                <field name="subscription_expires"/>
                <field name="snapshot_count"/>
            </list>
        </field>
    </record>

    <!-- Tenant Form View -->
    <record id="view_tenant_form" model="ir.ui.view">
        <field name="name">loomworks.tenant.form</field>
        <field name="model">loomworks.tenant</field>
        <field name="arch" type="xml">
            <form string="Tenant">
                <header>
                    <button name="action_provision" string="Provision" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" invisible="state not in ('provisioning', 'suspended')"/>
                    <button name="action_suspend" string="Suspend" type="object" class="btn-warning" invisible="state != 'active'" confirm="This will suspend the tenant. Users will not be able to access the system. Continue?"/>
                    <button name="action_archive" string="Archive" type="object" class="btn-danger" invisible="state == 'archived'" confirm="This will archive the tenant. This action cannot be easily undone. Continue?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,provisioning,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_tenant_snapshots)d" type="action" class="oe_stat_button" icon="fa-database">
                            <field name="snapshot_count" widget="statinfo" string="Snapshots"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tenant Name"/>
                        </h1>
                        <h3>
                            <field name="subdomain" placeholder="subdomain"/>.loomworks.app
                        </h3>
                    </div>
                    <group>
                        <group name="database" string="Database Configuration">
                            <field name="database_name"/>
                            <field name="tier"/>
                        </group>
                        <group name="contact" string="Contact">
                            <field name="owner_id"/>
                            <field name="admin_email"/>
                            <field name="billing_email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Resource Limits" name="limits">
                            <group>
                                <group string="Limits">
                                    <field name="max_users"/>
                                    <field name="max_storage_gb"/>
                                    <field name="max_ai_operations_daily"/>
                                    <field name="max_snapshots"/>
                                </group>
                                <group string="Current Usage">
                                    <field name="current_users"/>
                                    <field name="current_storage_gb"/>
                                    <field name="current_ai_operations_today"/>
                                </group>
                            </group>
                        </page>
                        <page string="Subscription" name="subscription">
                            <group>
                                <field name="subscription_start"/>
                                <field name="subscription_expires"/>
                            </group>
                        </page>
                        <page string="Timestamps" name="timestamps">
                            <group>
                                <group>
                                    <field name="created_at"/>
                                    <field name="provisioned_at"/>
                                </group>
                                <group>
                                    <field name="activated_at"/>
                                    <field name="suspended_at"/>
                                    <field name="last_accessed"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes about this tenant..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tenant Search View -->
    <record id="view_tenant_search" model="ir.ui.view">
        <field name="name">loomworks.tenant.search</field>
        <field name="model">loomworks.tenant</field>
        <field name="arch" type="xml">
            <search string="Search Tenants">
                <field name="name"/>
                <field name="subdomain"/>
                <field name="database_name"/>
                <field name="admin_email"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Suspended" name="suspended" domain="[('state', '=', 'suspended')]"/>
                <filter string="Provisioning" name="provisioning" domain="[('state', '=', 'provisioning')]"/>
                <separator/>
                <filter string="Free Tier" name="free" domain="[('tier', '=', 'free')]"/>
                <filter string="Paid" name="paid" domain="[('tier', '!=', 'free')]"/>
                <separator/>
                <filter string="Expiring Soon" name="expiring" domain="[('subscription_expires', '&lt;=', (context_today() + relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tier" name="group_tier" context="{'group_by': 'tier'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tenant Action -->
    <record id="action_tenant" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">loomworks.tenant</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_tenant_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tenant
            </p>
            <p>
                Tenants represent separate customer databases in a multi-tenant deployment.
                Each tenant has its own subdomain and isolated data.
            </p>
        </field>
    </record>


</loomworks>
