<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Spreadsheet Document Views -->

    <!-- Tree View -->
    <record id="spreadsheet_document_view_tree" model="ir.ui.view">
        <field name="name">spreadsheet.document.view.tree</field>
        <field name="model">spreadsheet.document</field>
        <field name="arch" type="xml">
            <tree string="Spreadsheets" default_order="write_date desc">
                <field name="name"/>
                <field name="description" optional="show"/>
                <field name="sheet_count"/>
                <field name="data_source_count"/>
                <field name="pivot_count"/>
                <field name="chart_count"/>
                <field name="is_template" widget="boolean_toggle"/>
                <field name="is_published" widget="boolean_toggle"/>
                <field name="create_uid" widget="many2one_avatar_user"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="spreadsheet_document_view_form" model="ir.ui.view">
        <field name="name">spreadsheet.document.view.form</field>
        <field name="model">spreadsheet.document</field>
        <field name="arch" type="xml">
            <form string="Spreadsheet">
                <header>
                    <button name="action_open_spreadsheet" type="object"
                            string="Open Spreadsheet" class="btn-primary"/>
                    <button name="action_duplicate" type="object"
                            string="Duplicate"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_spreadsheet" type="object"
                                class="oe_stat_button" icon="fa-table">
                            <div class="o_stat_info">
                                <field name="sheet_count" class="o_stat_value"/>
                                <span class="o_stat_text">Sheets</span>
                            </div>
                        </button>
                        <button name="%(action_spreadsheet_data_source)d" type="action"
                                class="oe_stat_button" icon="fa-database"
                                context="{'default_document_id': active_id, 'search_default_document_id': active_id}">
                            <div class="o_stat_info">
                                <field name="data_source_count" class="o_stat_value"/>
                                <span class="o_stat_text">Data Sources</span>
                            </div>
                        </button>
                        <button name="%(action_spreadsheet_pivot)d" type="action"
                                class="oe_stat_button" icon="fa-th"
                                context="{'default_document_id': active_id, 'search_default_document_id': active_id}">
                            <div class="o_stat_info">
                                <field name="pivot_count" class="o_stat_value"/>
                                <span class="o_stat_text">Pivots</span>
                            </div>
                        </button>
                        <button name="%(action_spreadsheet_chart)d" type="action"
                                class="oe_stat_button" icon="fa-bar-chart"
                                context="{'default_document_id': active_id, 'search_default_document_id': active_id}">
                            <div class="o_stat_info">
                                <field name="chart_count" class="o_stat_value"/>
                                <span class="o_stat_text">Charts</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Template"
                            invisible="not is_template"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Spreadsheet Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="is_template"/>
                            <field name="is_published"/>
                        </group>
                        <group>
                            <field name="create_uid" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="last_modified" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Data Sources" name="data_sources">
                            <field name="data_source_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="source_type"/>
                                    <field name="model_name"/>
                                    <field name="record_count"/>
                                    <field name="target_cell"/>
                                    <field name="last_refresh"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Pivot Tables" name="pivots">
                            <field name="pivot_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="model_name"/>
                                    <field name="target_cell"/>
                                    <field name="last_computed"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Charts" name="charts">
                            <field name="chart_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="chart_type"/>
                                    <field name="source_type"/>
                                    <field name="model_name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Technical" name="technical" groups="base.group_no_one">
                            <group>
                                <field name="raw_data" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="spreadsheet_document_view_kanban" model="ir.ui.view">
        <field name="name">spreadsheet.document.view.kanban</field>
        <field name="model">spreadsheet.document</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_order="write_date desc">
                <field name="name"/>
                <field name="description"/>
                <field name="sheet_count"/>
                <field name="is_template"/>
                <field name="create_uid"/>
                <field name="write_date"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex flex-column h-100">
                            <div class="d-flex mb-2">
                                <i class="fa fa-table fa-2x text-primary me-3"/>
                                <div class="flex-grow-1">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span t-if="record.is_template.raw_value"
                                          class="badge bg-info ms-2">Template</span>
                                    <div class="text-muted small">
                                        <field name="description"/>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mt-auto pt-2 border-top">
                                <span class="text-muted">
                                    <i class="fa fa-file-o me-1"/>
                                    <field name="sheet_count"/> sheets
                                </span>
                                <field name="create_uid" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="spreadsheet_document_view_search" model="ir.ui.view">
        <field name="name">spreadsheet.document.view.search</field>
        <field name="model">spreadsheet.document</field>
        <field name="arch" type="xml">
            <search string="Spreadsheets">
                <field name="name"/>
                <field name="description"/>
                <field name="create_uid"/>
                <filter name="my_spreadsheets" string="My Spreadsheets"
                        domain="[('create_uid', '=', uid)]"/>
                <filter name="templates" string="Templates"
                        domain="[('is_template', '=', True)]"/>
                <filter name="published" string="Published"
                        domain="[('is_published', '=', True)]"/>
                <separator/>
                <filter name="archived" string="Archived"
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_owner" string="Owner"
                            context="{'group_by': 'create_uid'}"/>
                    <filter name="group_by_create_date" string="Created Date"
                            context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_spreadsheet_document" model="ir.actions.act_window">
        <field name="name">Spreadsheets</field>
        <field name="res_model">spreadsheet.document</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="spreadsheet_document_view_search"/>
        <field name="context">{'search_default_my_spreadsheets': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first spreadsheet
            </p>
            <p>
                Build powerful data analysis with live Odoo data,
                pivot tables, and interactive charts.
            </p>
        </field>
    </record>

    <!-- Template Action -->
    <record id="action_spreadsheet_templates" model="ir.actions.act_window">
        <field name="name">Spreadsheet Templates</field>
        <field name="res_model">spreadsheet.document</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_template', '=', True)]</field>
        <field name="context">{'default_is_template': True}</field>
    </record>

</odoo>
