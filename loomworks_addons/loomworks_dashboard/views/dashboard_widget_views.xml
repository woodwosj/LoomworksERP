<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dashboard Widget Tree View -->
    <record id="view_dashboard_widget_tree" model="ir.ui.view">
        <field name="name">dashboard.widget.tree</field>
        <field name="model">dashboard.widget</field>
        <field name="arch" type="xml">
            <tree string="Widgets">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="dashboard_id"/>
                <field name="widget_type"/>
                <field name="tab_id"/>
                <field name="grid_x"/>
                <field name="grid_y"/>
                <field name="grid_width"/>
                <field name="grid_height"/>
                <field name="data_source_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Dashboard Widget Form View -->
    <record id="view_dashboard_widget_form" model="ir.ui.view">
        <field name="name">dashboard.widget.form</field>
        <field name="model">dashboard.widget</field>
        <field name="arch" type="xml">
            <form string="Widget">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Widget Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="dashboard_id"/>
                            <field name="widget_type"/>
                            <field name="tab_id" domain="[('dashboard_id', '=', dashboard_id)]"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Grid Position">
                        <group>
                            <field name="grid_x"/>
                            <field name="grid_y"/>
                        </group>
                        <group>
                            <field name="grid_width"/>
                            <field name="grid_height"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Data Source">
                            <group>
                                <field name="data_source_id"/>
                            </group>
                            <group string="Inline Data Source" invisible="data_source_id">
                                <group>
                                    <field name="inline_model"/>
                                    <field name="inline_domain"/>
                                </group>
                                <group>
                                    <field name="inline_group_by"/>
                                    <field name="inline_measure_field"/>
                                    <field name="inline_aggregation"/>
                                </group>
                            </group>
                        </page>
                        <page string="KPI Settings" invisible="widget_type != 'kpi'">
                            <group>
                                <group>
                                    <field name="kpi_format"/>
                                    <field name="kpi_prefix"/>
                                    <field name="kpi_suffix"/>
                                </group>
                                <group>
                                    <field name="kpi_trend_enabled"/>
                                    <field name="kpi_target"/>
                                </group>
                            </group>
                        </page>
                        <page string="Chart Settings"
                              invisible="widget_type not in ['chart_line', 'chart_bar', 'chart_area', 'chart_pie']">
                            <group>
                                <group>
                                    <field name="chart_colors"/>
                                    <field name="chart_show_legend"/>
                                </group>
                                <group>
                                    <field name="chart_show_grid"/>
                                    <field name="chart_stacked"/>
                                </group>
                            </group>
                        </page>
                        <page string="Table Settings" invisible="widget_type != 'table'">
                            <group>
                                <field name="table_page_size"/>
                                <field name="table_columns"/>
                            </group>
                        </page>
                        <page string="Filter Settings" invisible="widget_type != 'filter'">
                            <group>
                                <field name="filter_field"/>
                                <field name="filter_type"/>
                            </group>
                            <field name="linked_widget_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Gauge Settings" invisible="widget_type != 'gauge'">
                            <group>
                                <field name="kpi_target" string="Target"/>
                                <field name="kpi_format" string="Format"/>
                            </group>
                        </page>
                        <page string="Configuration">
                            <field name="config" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Widget Action -->
    <record id="action_dashboard_widget" model="ir.actions.act_window">
        <field name="name">Dashboard Widgets</field>
        <field name="res_model">dashboard.widget</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

</odoo>
