<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payslip Form View -->
    <record id="hr_payslip_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form string="Payslip">
                <header>
                    <button name="compute_sheet" string="Compute Sheet" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_payslip_verify" string="Mark as Verified" type="object"
                            invisible="state != 'draft'" class="btn-secondary"/>
                    <button name="action_payslip_done" string="Confirm" type="object"
                            invisible="state != 'verify'" class="oe_highlight"/>
                    <button name="action_payslip_draft" string="Set to Draft" type="object"
                            invisible="state not in ['verify', 'cancel']"/>
                    <button name="action_payslip_cancel" string="Cancel" type="object"
                            invisible="state in ['done', 'cancel']"/>
                    <button name="action_print_payslip" string="Print" type="object"
                            invisible="state == 'draft'" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,verify,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Payslip Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="contract_id"
                                   domain="[('employee_id', '=', employee_id), ('state', 'in', ['open', 'close'])]"/>
                            <field name="struct_id"/>
                            <field name="number" invisible="state == 'draft'"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="payslip_run_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Worked Days &amp; Inputs" name="inputs">
                            <group>
                                <group string="Worked Days">
                                    <field name="worked_days_line_ids" nolabel="1">
                                        <list editable="bottom">
                                            <field name="name"/>
                                            <field name="code"/>
                                            <field name="number_of_days"/>
                                            <field name="number_of_hours"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Other Inputs">
                                    <field name="input_line_ids" nolabel="1">
                                        <list editable="bottom">
                                            <field name="input_type_id"/>
                                            <field name="name"/>
                                            <field name="code"/>
                                            <field name="amount"/>
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>
                        <page string="Salary Computation" name="computation">
                            <field name="line_ids">
                                <list string="Payslip Lines" editable="bottom"
                                      decoration-info="total >= 0"
                                      decoration-danger="total &lt; 0">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category_id"/>
                                    <field name="quantity"/>
                                    <field name="rate"/>
                                    <field name="amount"/>
                                    <field name="total" sum="Total"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="gross_wage" widget="monetary"/>
                                <field name="total_deductions" widget="monetary"/>
                                <field name="net_wage" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Internal notes..."/>
                            <group>
                                <group>
                                    <field name="credit_note"/>
                                </group>
                                <group>
                                    <field name="paid"/>
                                    <field name="paid_date" invisible="not paid"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Payslip List View -->
    <record id="hr_payslip_view_list" model="ir.ui.view">
        <field name="name">hr.payslip.list</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <list string="Payslips" multi_edit="1"
                  decoration-info="state == 'draft'"
                  decoration-muted="state == 'cancel'">
                <field name="number" optional="show"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="gross_wage" widget="monetary" sum="Total Gross"/>
                <field name="net_wage" widget="monetary" sum="Total Net"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'verify'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancel'"/>
            </list>
        </field>
    </record>

    <!-- Payslip Search View -->
    <record id="hr_payslip_view_search" model="ir.ui.view">
        <field name="name">hr.payslip.search</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <search string="Search Payslips">
                <field name="name"/>
                <field name="number"/>
                <field name="employee_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Waiting" name="verify" domain="[('state', '=', 'verify')]"/>
                <filter string="Confirmed" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('date_from', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Unpaid" name="unpaid" domain="[('paid', '=', False), ('state', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'date_from:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_payslip" model="ir.actions.act_window">
        <field name="name">Payslips</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="hr_payslip_view_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new payslip
            </p>
            <p>
                Payslips compute employee salary based on contract,
                worked days, and configured salary rules.
            </p>
        </field>
    </record>

    <!-- Payslip Batch Views -->
    <record id="hr_payslip_run_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <form string="Payslip Batch">
                <header>
                    <button name="action_verify" string="Compute All" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_close" string="Confirm All" type="object"
                            invisible="state != 'verify'" class="oe_highlight"/>
                    <button name="action_draft" string="Set to Draft" type="object"
                            invisible="state not in ['verify', 'cancel']"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ['close', 'cancel']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,verify,close"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_payslips" type="object"
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field name="slip_count" string="Payslips" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="department_id"/>
                            <field name="struct_id"/>
                        </group>
                    </group>
                    <field name="slip_ids">
                        <list string="Payslips">
                            <field name="employee_id"/>
                            <field name="name"/>
                            <field name="gross_wage" widget="monetary"/>
                            <field name="net_wage" widget="monetary"/>
                            <field name="state" widget="badge"/>
                        </list>
                    </field>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="hr_payslip_run_view_list" model="ir.ui.view">
        <field name="name">hr.payslip.run.list</field>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <list string="Payslip Batches">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="slip_count"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="action_hr_payslip_run" model="ir.actions.act_window">
        <field name="name">Payslip Batches</field>
        <field name="res_model">hr.payslip.run</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a payslip batch
            </p>
            <p>
                Process multiple payslips at once by creating a batch.
            </p>
        </field>
    </record>
</odoo>
