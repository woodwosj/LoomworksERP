<?xml version="1.0" encoding="utf-8"?>
<loomworks>
    <record id="hr_payslip_employees_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.employees.form</field>
        <field name="model">hr.payslip.employees</field>
        <field name="arch" type="xml">
            <form string="Generate Payslips">
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="struct_id"/>
                        <field name="create_batch"/>
                        <field name="payslip_run_id"
                               invisible="create_batch"
                               domain="[('state', '=', 'draft')]"/>
                    </group>
                </group>
                <group string="Select Employees">
                    <field name="employee_ids" nolabel="1"
                           domain="[('company_id', '=', company_id)]">
                        <list>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="action_generate_payslips" string="Generate" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</loomworks>
