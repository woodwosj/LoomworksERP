<?xml version="1.0" encoding="utf-8"?>
<loomworks>
    <data noupdate="1">
        <!-- Payroll Module Category -->
        <record id="module_category_payroll" model="ir.module.category">
            <field name="name">Payroll</field>
            <field name="description">Manage employee payroll and salary computation</field>
            <field name="sequence">25</field>
        </record>

        <!-- Payroll User Group -->
        <record id="group_payroll_user" model="res.groups">
            <field name="name">Payroll User</field>
            <field name="category_id" ref="module_category_payroll"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="comment">Can view payslips and run computations</field>
        </record>

        <!-- Payroll Manager Group -->
        <record id="group_payroll_manager" model="res.groups">
            <field name="name">Payroll Manager</field>
            <field name="category_id" ref="module_category_payroll"/>
            <field name="implied_ids" eval="[(4, ref('group_payroll_user'))]"/>
            <field name="comment">Full access to payroll, configure rules and structures</field>
        </record>

        <!-- Record Rules -->

        <!-- Employees see only their own payslips -->
        <record id="rule_payslip_employee" model="ir.rule">
            <field name="name">Employee Own Payslips</field>
            <field name="model_id" ref="model_hr_payslip"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Payroll Users see all payslips in their company -->
        <record id="rule_payslip_user" model="ir.rule">
            <field name="name">Payroll User: Company Payslips</field>
            <field name="model_id" ref="model_hr_payslip"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_payroll_user'))]"/>
        </record>

        <!-- Multi-company rules for structures -->
        <record id="rule_payroll_structure_company" model="ir.rule">
            <field name="name">Payroll Structure: Multi-company</field>
            <field name="model_id" ref="model_hr_payroll_structure"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Multi-company rules for salary rules -->
        <record id="rule_salary_rule_company" model="ir.rule">
            <field name="name">Salary Rule: Multi-company</field>
            <field name="model_id" ref="model_hr_salary_rule"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Multi-company rules for payslip runs -->
        <record id="rule_payslip_run_company" model="ir.rule">
            <field name="name">Payslip Run: Multi-company</field>
            <field name="model_id" ref="model_hr_payslip_run"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</loomworks>
