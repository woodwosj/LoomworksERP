<?xml version="1.0" encoding="utf-8"?>
<loomworks>
    <data noupdate="0">
        <!-- Salary Rule Categories -->

        <!-- Basic -->
        <record id="category_basic" model="hr.salary.rule.category">
            <field name="name">Basic</field>
            <field name="code">BASIC</field>
            <field name="sequence">1</field>
            <field name="note">Base salary or hourly wage</field>
        </record>

        <!-- Allowances -->
        <record id="category_alw" model="hr.salary.rule.category">
            <field name="name">Allowances</field>
            <field name="code">ALW</field>
            <field name="sequence">10</field>
            <field name="note">Additional allowances (housing, transport, etc.)</field>
        </record>

        <!-- Gross -->
        <record id="category_gross" model="hr.salary.rule.category">
            <field name="name">Gross</field>
            <field name="code">GROSS</field>
            <field name="sequence">20</field>
            <field name="note">Gross wages before deductions</field>
        </record>

        <!-- Deductions -->
        <record id="category_ded" model="hr.salary.rule.category">
            <field name="name">Deductions</field>
            <field name="code">DED</field>
            <field name="sequence">30</field>
            <field name="note">All deductions (taxes, benefits, etc.)</field>
        </record>

        <!-- Federal Taxes (child of Deductions) -->
        <record id="category_ded_fed" model="hr.salary.rule.category">
            <field name="name">Federal Taxes</field>
            <field name="code">DED_FED</field>
            <field name="sequence">31</field>
            <field name="parent_id" ref="category_ded"/>
            <field name="note">Federal income tax, Social Security, Medicare</field>
        </record>

        <!-- State Taxes (child of Deductions) -->
        <record id="category_ded_state" model="hr.salary.rule.category">
            <field name="name">State Taxes</field>
            <field name="code">DED_STATE</field>
            <field name="sequence">32</field>
            <field name="parent_id" ref="category_ded"/>
            <field name="note">State income tax, disability insurance, etc.</field>
        </record>

        <!-- Benefits Deductions (child of Deductions) -->
        <record id="category_ded_benefits" model="hr.salary.rule.category">
            <field name="name">Benefits</field>
            <field name="code">DED_BEN</field>
            <field name="sequence">33</field>
            <field name="parent_id" ref="category_ded"/>
            <field name="note">Health insurance, 401k, etc.</field>
        </record>

        <!-- Company Contributions -->
        <record id="category_comp" model="hr.salary.rule.category">
            <field name="name">Company Contributions</field>
            <field name="code">COMP</field>
            <field name="sequence">40</field>
            <field name="note">Employer-paid contributions (not deducted from employee)</field>
        </record>

        <!-- Net -->
        <record id="category_net" model="hr.salary.rule.category">
            <field name="name">Net</field>
            <field name="code">NET</field>
            <field name="sequence">99</field>
            <field name="note">Net pay after all deductions</field>
        </record>
    </data>
</loomworks>
